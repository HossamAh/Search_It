<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:tools="http://schemas.android.com/tools"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        tools:context=".QueryResult" android:layout_margin="8dp" android:orientation="vertical">

    <TextView
            android:text="results contain 300 pages"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" android:id="@+id/result_number_textView" android:layout_marginTop="8dp"
            android:layout_marginStart="8dp" android:layout_marginEnd="8dp" android:layout_marginBottom="8dp"
    />
    <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:id="@+id/ResultPage_FrameLayout" android:layout_weight="15">

    </FrameLayout>
    <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="0dp" android:layout_below="@id/ResultPage_FrameLayout"
            android:layout_marginTop="8dp" android:layout_marginStart="8dp" android:layout_marginEnd="8dp"
            android:layout_marginBottom="8dp" android:layout_weight="3">
        <TextView
                android:text="1/20"
                android:layout_width="92dp"
                android:layout_height="95dp" android:id="@+id/CurrentPAge_textView"
                android:gravity="center_horizontal|center_vertical"
                android:layout_centerInParent="true" android:textSize="24sp" android:textColor="#090808"/>
        <ImageButton
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/Next_Button" android:layout_toRightOf="@id/CurrentPAge_textView"
                android:layout_marginRight="20dp" android:src="@drawable/forward" android:backgroundTint="#FFFFFF"
                android:layout_alignParentEnd="true" android:layout_marginEnd="20dp" android:layout_marginLeft="8dp"
                android:layout_alignParentBottom="true" android:layout_marginBottom="11dp"
                android:layout_marginTop="11dp" android:layout_alignParentTop="true"/>
        <ImageButton
                android:layout_width="91dp"
                android:layout_height="82dp"
                android:id="@+id/Previous_Button" android:layout_toLeftOf="@id/CurrentPAge_textView"
                android:layout_marginLeft="20dp" android:src="@drawable/back" android:backgroundTint="#FFFFFF"
                android:layout_marginRight="32dp" android:layout_toStartOf="@+id/CurrentPAge_textView"
                android:layout_marginEnd="32dp" android:layout_alignParentStart="true"
                android:layout_marginStart="21dp" android:layout_marginTop="13dp" android:layout_alignParentTop="true"
                android:layout_alignParentBottom="true" android:layout_marginBottom="16dp"/>
    </RelativeLayout>
</LinearLayout>